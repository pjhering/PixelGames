<project name="PixelGames"
         basedir="."
         default="all">

    <property name="dist" value="${basedir}/dist"/>

    <property name="app-library" value="${basedir}/pixel-app/library"/>
    <property name="app-source" value="${basedir}/pixel-app/source"/>
    <property name="app-build" value="${basedir}/pixel-app/build"/>
    <property name="app-jar" value="${dist}/pixel-app.jar"/>

    <property name="ces-source" value="${basedir}/pixel-ces/source"/>
    <property name="ces-build" value="${basedir}/pixel-ces/build"/>
    <property name="ces-jar" value="${dist}/pixel-ces.jar"/>

    <property name="maps-source" value="${basedir}/pixel-maps/source"/>
    <property name="maps-build" value="${basedir}/pixel-maps/build"/>
    <property name="maps-jar" value="${dist}/pixel-maps.jar"/>

    <property name="breakout-library" value="${basedir}/pixel-run2right/library"/>
    <property name="breakout-source" value="${basedir}/pixel-breakout/source"/>
    <property name="breakout-resource" value="${basedir}/pixel-breakout/resource"/>
    <property name="breakout-build" value="${basedir}/pixel-breakout/build"/>
    <property name="breakout-main" value="breakout.Main"/>
    <property name="breakout-jar" value="${dist}/breakout.jar"/>

    <property name="run2right-library" value="${basedir}/pixel-run2right/library"/>
    <property name="run2right-source" value="${basedir}/pixel-run2right/source"/>
    <property name="run2right-resource" value="${basedir}/pixel-run2right/resource"/>
    <property name="run2right-build" value="${basedir}/pixel-run2right/build"/>
    <property name="run2right-main" value="run2right.Main"/>
    <property name="run2right-jar" value="${dist}/run2right.jar"/>

    <property name="snake-library" value="${basedir}/pixel-snake/library"/>
    <property name="snake-source" value="${basedir}/pixel-snake/source"/>
    <property name="snake-resource" value="${basedir}/pixel-snake/resource"/>
    <property name="snake-build" value="${basedir}/pixel-snake/build"/>
    <property name="snake-main" value="snake.Main"/>
    <property name="snake-jar" value="${dist}/snake.jar"/>

    <property name="dragontale-source" value="${basedir}/pixel-dragontale/source"/>
    <property name="dragontale-resource" value="${basedir}/pixel-dragontale/resource"/>
    <property name="dragontale-build" value="${basedir}/pixel-dragontale/build"/>
    <property name="dragontale-main" value="Main.Game"/>
    <property name="dragontale-jar" value="${dist}/dragontale.jar"/>

    <target name="clean">
        <delete dir="${app-build}"/>
		<delete dir="${ces-build}"/>
		<delete dir="${maps-build}"/>
        <delete dir="${breakout-build}"/>
        <delete dir="${snake-build}"/>
        <delete dir="${dragontale-build}"/>
        <delete dir="${dist}"/>
    </target>

    <target name="app-prepare">
        <mkdir dir="${dist}"/>
        <mkdir dir="${app-build}"/>
    </target>

    <target name="app-compile" depends="app-prepare">
        <javac srcdir="${app-source}" destdir="${app-build}" includeantruntime="false">
            <classpath>
                <fileset dir="${app-library}" includes="**/*.jar"/>
            </classpath>
        </javac>
    </target>

    <target name="app-package" depends="app-compile">
        <jar destfile="${app-jar}">
            <fileset dir="${app-build}"/>
            <zipgroupfileset dir="${app-library}" includes="**/*.jar"/>
        </jar>
    </target>

    <target name="ces-prepare">
        <mkdir dir="${ces-build}"/>
    </target>

    <target name="ces-compile" depends="ces-prepare, app-compile">
        <javac srcdir="${ces-source}" destdir="${ces-build}" includeantruntime="false">
        </javac>
    </target>

    <target name="ces-package" depends="ces-compile">
        <jar destfile="${ces-jar}">
            <fileset dir="${ces-build}"/>
        </jar>
    </target>

    <target name="maps-prepare">
        <mkdir dir="${maps-build}"/>
    </target>

    <target name="maps-compile" depends="maps-prepare, app-compile">
        <javac srcdir="${maps-source}" destdir="${maps-build}" includeantruntime="false">
            <classpath>
                <pathelement path="${app-build}"/>
            </classpath>
        </javac>
    </target>

    <target name="maps-package" depends="maps-compile">
        <jar destfile="${maps-jar}">
            <fileset dir="${maps-build}"/>
        </jar>
    </target>

    <target name="breakout-prepare">
        <mkdir dir="${breakout-build}"/>
    </target>

    <target name="breakout-compile" depends="breakout-prepare, ces-compile">
        <javac srcdir="${breakout-source}" destdir="${breakout-build}" includeantruntime="false">
            <classpath>
                <pathelement path="${app-build}"/>
            </classpath>
        </javac>
    </target>

    <target name="breakout-package" depends="breakout-compile">
        <jar destfile="${breakout-jar}">
            <fileset dir="${app-build}"/>
            <zipgroupfileset dir="${app-library}" includes="**/*.jar"/>
            <fileset dir="${breakout-build}"/>
            <fileset dir="${breakout-resource}"/>
            <manifest>
                <attribute name="Main-Class" value="${breakout-main}"/>
            </manifest>
        </jar>
    </target>

    <target name="snake-prepare">
        <mkdir dir="${snake-build}"/>
    </target>

    <target name="snake-compile" depends="snake-prepare, ces-compile">
        <javac srcdir="${snake-source}" destdir="${snake-build}" includeantruntime="false">
            <classpath>
                <pathelement path="${app-build}"/>
            </classpath>
        </javac>
    </target>

    <target name="snake-package" depends="snake-compile">
        <jar destfile="${snake-jar}">
            <fileset dir="${app-build}"/>
            <zipgroupfileset dir="${app-library}" includes="**/*.jar"/>
            <fileset dir="${snake-build}"/>
            <fileset dir="${snake-resource}"/>
            <manifest>
                <attribute name="Main-Class" value="${snake-main}"/>
            </manifest>
        </jar>
    </target>

	    <target name="run2right-prepare">
	        <mkdir dir="${run2right-build}"/>
	    </target>

	    <target name="run2right-compile" depends="run2right-prepare">
	        <javac srcdir="${run2right-source}" destdir="${run2right-build}" includeantruntime="false">
	            <classpath>
	                <pathelement path="${app-build}"/>
	            </classpath>
	        </javac>
	    </target>

	    <target name="run2right-package" depends="run2right-compile">
	        <jar destfile="${run2right-jar}">
	            <fileset dir="${app-build}"/>
	            <zipgroupfileset dir="${app-library}" includes="**/*.jar"/>
	            <fileset dir="${run2right-build}"/>
	            <fileset dir="${run2right-resource}"/>
	            <manifest>
	                <attribute name="Main-Class" value="${run2right-main}"/>
	            </manifest>
	        </jar>
	    </target>

    <target name="dragontale-prepare">
        <mkdir dir="${dragontale-build}"/>
    </target>

    <target name="dragontale-compile" depends="dragontale-prepare">
        <javac srcdir="${dragontale-source}" destdir="${dragontale-build}" includeantruntime="false">
        </javac>
    </target>

    <target name="dragontale-package" depends="dragontale-compile">
        <jar destfile="${dragontale-jar}">
            <fileset dir="${dragontale-build}"/>
            <fileset dir="${dragontale-resource}"/>
            <manifest>
                <attribute name="Main-Class" value="${dragontale-main}"/>
            </manifest>
        </jar>
    </target>

    <target name="all"
		depends="app-package, ces-package, maps-package, breakout-package, snake-package, run2right-package, dragontale-package">
    </target>

</project>
